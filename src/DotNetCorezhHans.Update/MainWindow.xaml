<Window x:Class="DotNetCorezhHans.Update.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DotNetCorezhHans.Update"
        WindowStyle="None"
        AllowsTransparency="True" 
        Title="更新文件"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"       
        mc:Ignorable="d" Width="200" Height="100" Loaded="Window_Loaded" >
    <Grid>
        <TextBlock Background="White" FontSize="30"  Text="{Binding Text}"
                   Padding="10 10"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"/>
    </Grid>
</Window>
